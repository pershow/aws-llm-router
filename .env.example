LISTEN_ADDR=:8080
REQUEST_TIMEOUT_SECONDS=500
# 0 means no proxy-side body limit (let AWS/model limits decide)
MAX_BODY_BYTES=0

# Optional bootstrap AWS config.
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Optional fallback when request.model is empty.
# If set in admin AWS config, admin value takes precedence.
DEFAULT_MODEL_ID=

# 0 means do not inject max tokens from proxy side
DEFAULT_MAX_OUTPUT_TOKENS=0

GLOBAL_MAX_CONCURRENT=512
DB_PATH=./data/router.db
LOG_QUEUE_SIZE=10000
MAX_CONTENT_CHARS=200000

# 强制模型调用工具 (当请求包含 tools 时)
# 设置为 true 可解决 Cursor Agent 模式下模型不调用工具的问题
FORCE_TOOL_USE=true

DEBUG_REQUESTS=true
