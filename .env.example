LISTEN_ADDR=:8080
REQUEST_TIMEOUT_SECONDS=500
# 0 means no proxy-side body limit (let AWS/model limits decide)
MAX_BODY_BYTES=0

# Optional bootstrap AWS config.
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=

# Optional fallback when request.model is empty.
# If set in admin AWS config, admin value takes precedence.
DEFAULT_MODEL_ID=

# 0 means do not inject max tokens from proxy side.
DEFAULT_MAX_OUTPUT_TOKENS=0

# When tools are present, enforce at least this max_tokens value to reduce
# truncated tool arguments (finish_reason=length). Set 0 to disable.
MIN_TOOL_MAX_OUTPUT_TOKENS=8192

GLOBAL_MAX_CONCURRENT=512
DB_PATH=./data/router.db
LOG_QUEUE_SIZE=10000
MAX_CONTENT_CHARS=200000

# Force tool usage when request includes tools.
FORCE_TOOL_USE=false

# Buffer tool arguments and flush once at stream end.
# false keeps gateway-compatible per-delta forwarding.
BUFFER_TOOL_CALL_ARGS=false

DEBUG_REQUESTS=true
